<p id ="doctor_attributes">
  Name: <%=@doctor.name%>, Specialty: <%=@doctor.specialty%>, Specialty: <%=@doctor.university%>
</p>
<p id ="doctor_hospital">
  Hospital: <%=@doctor.hospital.name%>
</p>

<h4>Patients</h4>
<ul id ="doctor_patients">
  <% @doctor.patients.each do |patient|%>
    <li id="patient_<%=patient.id%>">
      <%= patient.name%>
      <%= button_to "Remove from doctors care", doctor_patient_path, method: :delete, params: {doctor_id: @doctor.id, patient_id: patient.id} %>
    </li>
  <% end%>
</ul>